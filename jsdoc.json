{
	"source": {
		"include": [
			"index.js",

			"README.md",
			"lib",

			"lib/helpers",

			"lib/modules/api",
			"lib/modules/bridge",
			"lib/modules/bridge/generators",
			"lib/modules/controllers",
			"lib/modules/migrations",
			"lib/modules/models",
			"lib/modules/seo",
			"lib/modules/static",
			"lib/modules/templates"
		],
		"includePattern": ".*\\.(js|md)$"
	},
	"plugins": [
		"plugins/markdown"
	],
	"markdown": {
    	"parser": "gfm",
    	"hardwrap": true,
    	"githubRepoName": "fire",
    	"githubRepoOwner": "martijndeh"
	},
	"opts": {
		"destination": "docs",
		"template": "docs-template"
	},
	"tags": {
		"allowUnknownTags": true
	}
}
