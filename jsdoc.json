{
	"source": {
		"include": [
			"../fire/index.js",

			"../fire/README.md",
			"../fire/lib",

			"../fire/lib/helpers",

			"../fire/lib/modules/api",
			"../fire/lib/modules/bridge",
			"../fire/lib/modules/bridge/generators",

			"../fire/lib/modules/clock",
			"../fire/lib/modules/configure-functions",
			"../fire/lib/modules/controllers",
			"../fire/lib/modules/http-server",
			"../fire/lib/modules/injector",
			"../fire/lib/modules/isomorphic",
			"../fire/lib/modules/message-queue",
			"../fire/lib/modules/middleware",
			"../fire/lib/modules/migrations",
			"../fire/lib/modules/models",
			"../fire/lib/modules/module-properties",
			"../fire/lib/modules/schedulers",
			"../fire/lib/modules/static",
			"../fire/lib/modules/tasks",
			"../fire/lib/modules/templates",
			"../fire/lib/modules/tests",
			"../fire/lib/modules/triggers",
			"../fire/lib/modules/upgrader",
			"../fire/lib/modules/workers"
		],
		"includePattern": ".*\\.(js|md)$"
	},
	"plugins": [
		"plugins/markdown"
	],
	"markdown": {
    	"parser": "gfm",
    	"hardwrap": true,
    	"githubRepoName": "fire",
    	"githubRepoOwner": "martijndeh"
	},
	"opts": {
		"destination": "documentation",
		"template": "_template"
	},
	"tags": {
		"allowUnknownTags": true
	}
}
